.operation-wrap {
  margin: 30px;
  text-align: center;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.theme-selector {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.theme-list {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.theme-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #eee;
  min-width: 120rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.theme-item.active {
  border-color: #0EC0B8;
  background-color: rgba(14, 192, 184, 0.1);
}

.theme-item:active {
  transform: scale(0.95);
}

.theme-color {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid #ddd;
}

.theme-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.custom-theme {
  padding: 20rpx 0;
}

.color-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.color-item text {
  font-size: 28rpx;
  color: #333;
  min-width: 100rpx;
}

.color-item input {
  flex: 1;
  padding: 15rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.color-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
}
