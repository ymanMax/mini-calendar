.operation-wrap {
  margin: 30px;
  text-align: center;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 40rpx 20rpx;
  flex-wrap: wrap;
}

/* 提醒设置模态框 */
.reminder-settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.reminder-settings-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.reminder-settings-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 设置项 */
.reminder-setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reminder-setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-text {
  font-size: 26rpx;
  color: #666;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

/* 设置分组 */
.reminder-settings-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #0EC0B8;
}

/* 底部按钮 */
.reminder-settings-footer {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}
